<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity_education"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:background="@drawable/drawer_bg"
android:layout_marginTop="10dp"
tools:context="com.example.sailik.resumebuilder_24_feb.EducationActivity">

<TextView
    android:text="Education"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:textSize="20sp"
    android:textStyle="bold"
    android:textColor="@color/colorPrimary"
    android:layout_marginBottom="10dp"
    android:id="@+id/education_label_tv" />
<TextView
    android:text="Course Name: "
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/education_label_tv"
    android:textSize="18sp"
    android:textStyle="normal"
    android:layout_marginLeft="20dp"

    android:textColor="@color/colorPrimary"
    android:id="@+id/coursename_label_tv" />

<EditText
    android:text="Coursename.."
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/education_label_tv"
    android:layout_toRightOf="@+id/coursename_label_tv"
    android:layout_toEndOf="@+id/coursename_label_tv"
    android:inputType="text"
    android:textSize="15sp"
    android:textStyle="italic"
    android:paddingLeft="10dp"
    android:maxLength="20"

    android:textColor="@color/colorPrimary"
    android:id="@+id/coursename_desc_editText" />
<TextView
    android:text="College: "
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/coursename_desc_editText"
    android:layout_alignLeft="@+id/coursename_label_tv"
    android:textSize="18sp"
    android:textStyle="normal"
    android:layout_marginTop="10dp"
    android:textColor="@color/colorPrimary"
    android:id="@+id/collegename_label_tv" />

<EditText
    android:text="College name here....."
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inputType="text"

    android:layout_marginTop="15dp"
    android:paddingLeft="10dp"
    android:layout_toEndOf="@+id/collegename_label_tv"
    android:layout_toRightOf="@+id/collegename_label_tv"
    android:layout_below="@+id/coursename_desc_editText"
    android:textSize="15sp"
    android:textStyle="italic"
    android:textColor="@color/colorPrimary"
    android:maxLength="50"

    android:layout_marginRight="20dp"

    android:id="@+id/collegename_desc_editText" />

<TextView
    android:text="Duration: "
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/collegename_desc_editText"
    android:layout_alignLeft="@+id/collegename_label_tv"
    android:textSize="18sp"
    android:textStyle="normal"
    android:layout_marginTop="10dp"
    android:textColor="@color/colorPrimary"
    android:id="@+id/duration_label_tv" />


<EditText
    android:text="Duration here..."
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inputType="text"
    android:layout_marginTop="15dp"
    android:paddingLeft="10dp"
    android:layout_toEndOf="@+id/duration_label_tv"
    android:layout_toRightOf="@+id/duration_label_tv"
    android:layout_below="@+id/collegename_desc_editText"
    android:textSize="15sp"
    android:textStyle="italic"
    android:textColor="@color/colorPrimary"
    android:maxLength="30"


    android:layout_marginRight="20dp"

    android:id="@+id/duration_desc_editText" />



<Button
    android:text="OK"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/duration_desc_editText"
    android:layout_marginTop="5dp"
    android:layout_alignRight="@+id/collegename_desc_editText"
    style="@style/Widget.AppCompat.Button.Small"
    android:textSize="15sp"
    android:textStyle="normal"

    android:id="@+id/education_ok_button" />


</RelativeLayout>
