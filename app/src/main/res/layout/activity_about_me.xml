<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_about_me"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/drawer_bg"
    android:layout_marginTop="10dp"
    tools:context="com.example.sailik.resumebuilder_24_feb.AboutMeActivity">

    <TextView
        android:text="About me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:id="@+id/aboutme_tv" />

    <TextView
        android:text="paragraph here.............................................................................."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aboutme_tv"
        android:textSize="15sp"
        android:textStyle="italic"
        android:textColor="@color/colorPrimary"
        android:maxLength="150"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:visibility="gone"
        android:id="@+id/aboutme_desc_tv" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="fill here..."
        android:layout_below="@+id/aboutme_tv"
        android:textSize="15sp"
        android:textStyle="italic"
        android:textColor="@color/colorPrimary"
        android:maxLength="150"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/aboutme_editText" />

    <Button
        android:text="EDIT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aboutme_desc_tv"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        style="@style/Widget.AppCompat.Button.Small"
        android:textSize="15sp"
        android:textStyle="normal"
        android:id="@+id/aboutme_edit_button" />
    <Button
        android:text="OK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aboutme_editText"
        android:layout_marginTop="10dp"

        style="@style/Widget.AppCompat.Button.Small"
        android:textSize="15sp"
        android:textStyle="normal"

        android:id="@+id/aboutme_ok_button" />


</RelativeLayout>
