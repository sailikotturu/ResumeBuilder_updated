<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_header"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/drawer_bg"
        tools:context="com.example.sailik.resumebuilder_24_feb.HeaderActivity">





                <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/name_editText"
                    android:paddingLeft="5dp"
                    android:textSize="20sp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="italic"
                    android:layout_marginTop="10dp"

                    />


                <TextView

                    android:layout_alignLeft="@id/name_editText"
                    android:paddingLeft="5dp"
                    android:layout_below="@id/name_editText"
                    android:textSize="15sp"
                    android:visibility="gone"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="italic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/email_editText"
                    android:layout_marginTop="10dp"
                    />
                <!--<TextView-->

                <TextView
                    android:text="Experience: "
                    android:layout_alignStart="@id/email_editText"
                    android:layout_alignLeft="@id/email_editText"
                    android:layout_below="@id/email_editText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:textSize="15sp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="normal"
                    android:id="@+id/exp_label_tv"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"

                    android:text="77"
                    android:id="@+id/exp_tv"
                    android:textSize="15sp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="italic"
                    android:maxLength="9"
                    android:layout_marginLeft="5dp"
                    android:layout_below="@id/email_editText"
                    android:layout_toRightOf="@+id/exp_label_tv"
                    android:layout_toEndOf="@+id/exp_label_tv"
                    android:visibility="gone"
                    />
                <EditText
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:hint="fill here"
                    android:layout_marginTop="10dp"
                    android:inputType="textPersonName"
                    android:id="@+id/exp_editText"
                    android:textSize="15sp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="italic"
                    android:maxLength="9"
                    android:layout_below="@id/email_editText"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/exp_label_tv"
                    android:layout_toEndOf="@+id/exp_label_tv"

                    />



                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OK"
                    android:textSize="8sp"


                    android:id="@+id/ok_button"
                    android:layout_below="@id/exp_editText"
                    android:layout_toEndOf="@id/exp_editText"
                    android:layout_toRightOf="@id/exp_editText"
                    style="@style/Widget.AppCompat.Button.Small"/>



</LinearLayout>


